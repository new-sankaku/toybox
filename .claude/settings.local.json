{
  "permissions": {
    "allow": [
      "Bash(xargs:*)",
      "Bash(curl:*)",
      "Bash(dir:*)",
      "Bash(echo:*)",
      "Bash(npm run lint:fix:*)",
      "Bash(npm run build:*)",
      "Bash(npm run format:*)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "bash ~/.claude/scripts/log-tool-use.sh"
          }
        ]
      }
    ]
  }
}
