{
  "permissions": {
    "allow": [
      "Bash(xargs:*)",
      "Bash(curl:*)",
      "Bash(dir:*)",
      "Bash(echo:*)",
      "Bash(npm run lint:fix:*)",
      "Bash(npm run build:*)",
      "Bash(npm run format:*)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "set CLAUDE_HOOK_TYPE=PreToolUse && node \"%USERPROFILE%/.claude/scripts/log-tool-use.js\""
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "set CLAUDE_HOOK_TYPE=PostToolUse && node \"%USERPROFILE%/.claude/scripts/log-tool-use.js\""
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "set CLAUDE_HOOK_TYPE=Notification && node \"%USERPROFILE%/.claude/scripts/log-tool-use.js\""
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "set CLAUDE_HOOK_TYPE=Stop && node \"%USERPROFILE%/.claude/scripts/log-tool-use.js\""
          }
        ]
      }
    ]
  }
}
