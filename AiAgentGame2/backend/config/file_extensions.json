{
  "categories": {
    "image": {
      "extensions": [".webp", ".png", ".jpg", ".jpeg", ".gif", ".bmp", ".svg", ".ico", ".tiff", ".tif"],
      "label": "画像",
      "mimeTypes": ["image/*"]
    },
    "audio": {
      "extensions": [".mp3", ".wav", ".ogg", ".flac", ".m4a", ".aac", ".wma"],
      "label": "音声",
      "mimeTypes": ["audio/*"]
    },
    "video": {
      "extensions": [".mp4", ".webm", ".avi", ".mov", ".mkv", ".wmv", ".flv"],
      "label": "動画",
      "mimeTypes": ["video/*"]
    },
    "document": {
      "extensions": [".md", ".txt", ".json", ".yaml", ".yml", ".xml", ".csv"],
      "label": "ドキュメント",
      "mimeTypes": ["text/*", "application/json", "application/xml"]
    },
    "code": {
      "extensions": [".py", ".js", ".ts", ".tsx", ".jsx", ".html", ".css", ".scss", ".sass", ".less", ".vue", ".svelte"],
      "label": "コード",
      "mimeTypes": ["text/*", "application/javascript"]
    },
    "archive": {
      "extensions": [".zip", ".tar", ".gz", ".rar", ".7z"],
      "label": "アーカイブ",
      "mimeTypes": ["application/zip", "application/x-tar", "application/gzip"]
    }
  },
  "scanDirectories": ["image", "mp3", "movie", "audio", "video", "assets"],
  "defaultCategory": "other"
}
