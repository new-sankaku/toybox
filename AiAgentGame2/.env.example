# =================================
# Backend Configuration
# =================================

# Agent Mode: "testdata" for simulation, "api" for real API calls
AGENT_MODE=testdata

# AI Model Settings
AGENT_MODEL=claude-sonnet-4-20250514
AGENT_MAX_TOKENS=4096

# Anthropic API Key (required for api mode)
ANTHROPIC_API_KEY=

# =================================
# Server Configuration
# =================================

SERVER_HOST=127.0.0.1
SERVER_PORT=5000
DEBUG=true
CORS_ORIGINS=*

# =================================
# External Services (optional)
# =================================

# ComfyUI endpoint for image generation
COMFYUI_ENDPOINT=http://localhost:8188

# VoiceVox endpoint for voice synthesis
VOICEVOX_ENDPOINT=http://localhost:50021

# Audio service endpoint
AUDIO_SERVICE_URL=http://localhost:8000
