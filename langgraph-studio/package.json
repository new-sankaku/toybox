{
  "name": "langgraph-studio",
  "version": "1.0.0",
  "description": "LangGraph Game Development System - Professional Desktop App",
  "type": "module",
  "main": "./out/main/index.js",
  "scripts": {
    "dev": "vite",
    "dev:electron": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "postinstall": "electron-builder install-app-deps",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "npm run build && electron-builder --mac",
    "build:linux": "npm run build && electron-builder --linux",
    "lint": "eslint src",
    "typecheck": "tsc --noEmit",
    "format": "node scripts/remove-spaces.cjs",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:report": "playwright show-report",
    "generate-types": "openapi-typescript src/types/openapi.json -o src/types/api-generated.ts"
  },
  "dependencies": {
    "@monaco-editor/react": "^4.6.0",
    "@radix-ui/react-progress": "^1.1.1",
    "@tanstack/react-query": "^5.62.0",
    "@xyflow/react": "^12.10.0",
    "axios": "^1.7.9",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.469.0",
    "monaco-editor": "^0.55.1",
    "react-markdown": "^9.0.1",
    "recharts": "^3.7.0",
    "remark-gfm": "^4.0.0",
    "socket.io-client": "^4.8.1",
    "tailwind-merge": "^2.6.0",
    "zustand": "^5.0.2"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-prettier": "^2.0.0",
    "@electron-toolkit/eslint-config-ts": "^2.0.0",
    "@electron-toolkit/preload": "^3.0.1",
    "@electron-toolkit/utils": "^3.0.0",
    "@playwright/mcp": "^0.0.63",
    "@playwright/test": "^1.58.0",
    "@stylistic/eslint-plugin": "^2.12.0",
    "@types/d3": "^7.4.3",
    "@types/node": "^22.10.2",
    "@types/react": "^18.3.17",
    "@types/react-dom": "^18.3.5",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "electron": "^33.3.0",
    "electron-builder": "^25.1.8",
    "electron-vite": "^2.3.0",
    "eslint": "^8.57.1",
    "glob": "^13.0.0",
    "openapi-typescript": "^7.10.1",
    "postcss": "^8.4.49",
    "puppeteer": "^24.36.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.53.1",
    "vite": "^5.4.11",
    "vite-plugin-monaco-editor": "^1.1.0"
